source 'https://rubygems.org'

group :jekyll_plugins do
  gem 'wdm', '>= 0.1.0'              # For Windows file system notifications
  gem 'jekyll'                       # Core Jekyll gem
  gem 'jekyll-feed'                  # RSS feed support
  gem 'jekyll-sitemap'               # Sitemap generator
  gem 'jemoji'                       # Emojis in Jekyll
  gem 'webrick', '~> 1.8'            # For running Jekyll server
end

gem 'github-pages'                   # GitHub Pages support

# Add tzinfo-data for timezone support on Windows
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]
